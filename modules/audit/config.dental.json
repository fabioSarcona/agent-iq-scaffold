        {
          "id": "appointment_fill_rate_choice",
          "label": "On average, what percentage of your available appointment slots get booked?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "gt_95","label": "Over 95%","score": 10},
            {"value": "90_95","label": "90 – 95%","score": 8},
            {"value": "75_90","label": "75 – 90%","score": 6},
            {"value": "lt_75","label": "Under 75%","score": 4}
          ]
        }
      ]
    },
    {
      "id": "treatment_plan_conversion",
      "preHeadline": "Treatment Plan Conversion",
      "headline": "Plug the Revenue Leaks in Your Chair-Side Presentations",
