          "required": true,
          "options": [
            {"value": "gt_80","label": "Over 80%","score": 10},
            {"value": "60_80","label": "60 – 80%","score": 8},
            {"value": "40_60","label": "40 – 60%","score": 6},
            {"value": "lt_40","label": "Under 40%","score": 4}
