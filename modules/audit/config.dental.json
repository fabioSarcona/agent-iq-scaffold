{
  "version": 1,
  "vertical": "dental",
  "sections": [
    {
      "id": "practice_profile",
      "preHeadline": "Practice Profile",
      "headline": "Who You Are and How Your Practice Runs",
      "description": "Before we can offer the right solutions, we need to understand how your practice works day to day — how many patients you see, how your team is structured, and which tools you rely on.",
      "questions": [
        {
          "id": "chairs_active",
          "label": "How many dental chairs are you actively using in your practice?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "1_2","label": "1 – 2 chairs","score": 2},
            {"value": "3_4","label": "3 – 4 chairs","score": 4},
            {"value": "5_8","label": "5 – 8 chairs","score": 6},
            {"value": "9_plus","label": "9 or more chairs","score": 8}
          ]
        },
        {
          "id": "call_team_members",
          "label": "How many team members usually answer phone calls?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "1","label": "1 person","score": 2},
            {"value": "2_3","label": "2 – 3 people","score": 4},
            {"value": "4_6","label": "4 – 6 people","score": 6},
            {"value": "7_plus","label": "7 or more people","score": 8}
          ]
        },
        {
          "id": "practice_management_software",
          "label": "What practice management software do you use for appointments and records?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "opendental","label": "OpenDental","score": 4},
            {"value": "dentrix","label": "Dentrix","score": 4},
            {"value": "eaglesoft","label": "Eaglesoft","score": 4},
            {"value": "curve","label": "Curve","score": 4},
            {"value": "carestack","label": "CareStack","score": 4},
            {"value": "other","label": "Other software","score": 3},
            {"value": "none","label": "We don't use any software","score": 0}
          ]
        },
        {
          "id": "website_scheduling_connection",
          "label": "Is your website fully connected to your scheduling system?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "full","label": "Yes, fully connected","score": 5},
            {"value": "partial","label": "Partially connected","score": 3},
            {"value": "not_connected","label": "Not connected","score": 0},
            {"value": "no_website","label": "We don't have a website","score": 0}
          ]
        },
        {
          "id": "weekly_appointments_count",
          "label": "On average, how many patient appointments do you have per week?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "lt_30","label": "Fewer than 30","score": 2},
            {"value": "30_70","label": "30 – 70","score": 4},
            {"value": "71_120","label": "71 – 120","score": 6},
            {"value": "121_plus","label": "121 or more","score": 8}
          ]
        },
        {
          "id": "chair_utilization_pct",
          "label": "On a typical day, about what percentage of your chairs are in use with patients?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "lt_60","label": "Under 60%","score": 2},
            {"value": "60_80","label": "60 – 80%","score": 4},
            {"value": "gt_80","label": "Over 80%","score": 6}
          ]
        }
      ]
    },
    {
      "id": "financial_overview",
      "preHeadline": "Financial Performance",
      "headline": "Understanding Your Revenue Streams",
      "description": "Let's take a quick look at the numbers behind your business — treatment fees, patient volume, and profit margins.",
      "questions": [
        {
          "id": "avg_fee_standard_treatment_usd",
          "label": "What's the average fee you charge for a standard treatment (like cleaning or filling)?",
          "type": "currency",
          "required": true,
          "validation": {"min": 0, "max": 10000, "currency": "USD"}
        },
        {
          "id": "avg_fee_complex_treatment_usd",
          "label": "What's the average fee you charge for a complex treatment (like crowns or implants)?",
          "type": "currency",
          "required": true,
          "validation": {"min": 0, "max": 50000, "currency": "USD"}
        },
        {
          "id": "monthly_treatments_count",
          "label": "About how many treatments do you perform each month?",
          "type": "number",
          "required": true,
          "validation": {"min": 0, "max": 1000, "step": 1}
        },
        {
          "id": "monthly_new_patients",
          "label": "How many new patients do you usually see each month?",
          "type": "number",
          "required": true,
          "validation": {"min": 0, "max": 500, "step": 1}
        },
        {
          "id": "new_patient_first_year_ltv_usd",
          "label": "What's the average total value you earn from a patient in their first year?",
          "type": "currency",
          "required": true,
          "validation": {"min": 0, "max": 20000, "currency": "USD"}
        },
        {
          "id": "treatment_acceptance_rate_choice",
          "label": "What percentage of proposed treatment plans are accepted?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "lt_30","label": "Less than 30%","score": 2},
            {"value": "30_60","label": "30 – 60%","score": 4},
            {"value": "60_80","label": "60 – 80%","score": 6},
            {"value": "gt_80","label": "Over 80%","score": 8}
          ]
        },
        {
          "id": "payment_within_30_days_choice",
          "label": "What percentage of invoices are fully paid within 30 days?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "lt_70","label": "Less than 70%","score": 0},
            {"value": "70_90","label": "70–90%","score": 3},
            {"value": "gt_90","label": "Over 90%","score": 5}
          ]
        },
        {
          "id": "monthly_operating_margin_usd",
          "label": "What's your estimated monthly operating margin in dollars?",
          "type": "currency",
          "required": true,
          "validation": {"min": 0, "max": 100000, "currency": "USD"}
        }
      ]
    },
    {
      "id": "call_handling_conversion",
      "preHeadline": "Operations & Communication",
      "headline": "How You Handle Calls and Appointments",
      "description": "Your phone line is often the first touchpoint for new and returning patients.",
      "questions": [
        {
          "id": "daily_incoming_calls_choice",
          "label": "How many incoming calls do you receive per day on average?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "lt_20","label": "Fewer than 20","score": 2},
            {"value": "20_50","label": "20 – 50","score": 4},
            {"value": "51_100","label": "51 – 100","score": 6},
            {"value": "101_150","label": "101 – 150","score": 8},
            {"value": "151_plus","label": "151 or more","score": 10}
          ],
          "map": {"lossArea": "Missed Calls Revenue Loss", "weight": 0.25}
        },
        {
          "id": "daily_unanswered_calls_choice",
          "label": "On an average day, how many calls are missed or not answered?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "0","label": "0","score": 10},
            {"value": "1_3","label": "1 – 3","score": 8},
            {"value": "4_10","label": "4 – 10","score": 6},
            {"value": "11_20","label": "11 – 20","score": 4},
            {"value": "21_plus","label": "21 or more","score": 2}
          ],
          "map": {"lossArea": "Missed Calls Revenue Loss", "weight": 0.25}
        },
        {
          "id": "new_patient_conversion_rate_choice",
          "label": "Out of 10 calls from potential new patients, about how many turn into booked appointments?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "0_2","label": "0–2","score": 0},
            {"value": "3_5","label": "3–5","score": 2},
            {"value": "6_10","label": "6–10","score": 5}
          ]
        },
        {
          "id": "after_hours_call_handling_choice",
          "label": "How do you handle calls that come in after business hours?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "ai_or_live","label": "AI answering system or live call service","score": 5},
            {"value": "whatsapp_sms","label": "WhatsApp/SMS bot","score": 3},
            {"value": "voicemail","label": "Voicemail only","score": 2},
            {"value": "none","label": "No system","score": 0}
          ]
        },
        {
          "id": "missed_call_followup_speed_choice",
          "label": "If you miss a call, how quickly do you usually call back?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "15m","label": "Within 15 minutes","score": 10},
            {"value": "15_60m","label": "15 – 60 minutes","score": 8},
            {"value": "2h","label": "Within 2 hours","score": 6},
            {"value": "eod","label": "By end of day","score": 4},
            {"value": "next_day","label": "Next day / inconsistent","score": 2}
          ]
        }
      ]
    },
    {
      "id": "scheduling_no_shows",
      "preHeadline": "Revenue Protection",
      "headline": "Managing Lost Revenue and Missed Opportunities",
      "description": "Missed appointments and unanswered estimates can quietly drain your revenue.",
      "questions": [
        {
          "id": "weekly_no_shows_choice",
          "label": "How many no-shows do you have in a typical week?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "0","label": "0","score": 10},
            {"value": "1_3","label": "1 – 3","score": 8},
            {"value": "4_6","label": "4 – 6","score": 6},
            {"value": "7_10","label": "7 – 10","score": 4},
            {"value": "11_plus","label": "11 or more","score": 2}
