          "required": true,
          "validation": {"min": 0, "max": 200, "step": 1},
          "map": {"lossArea": "Treatment Plans Revenue Loss", "weight": 0.25}
        },
        {
          "id": "avg_unaccepted_plan_value_usd",
          "label": "What's the average value of each unaccepted treatment plan?",
          "type": "currency",
          "required": true,
          "validation": {"min": 0, "max": 10000, "currency": "USD"},
          "map": {"lossArea": "Treatment Plans Revenue Loss", "weight": 0.25}
