        {
          "id": "automatic_reminders_choice",
          "label": "Do you send automatic reminders for appointments?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "yes","label": "Yes","score": 5},
            {"value": "no","label": "No","score": 0}
          ]
