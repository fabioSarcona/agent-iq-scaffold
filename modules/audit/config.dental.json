          "map": {"lossArea": "No-Shows Revenue Loss", "weight": 0.25}
        },
        {
          "id": "high_value_deposit_policy_choice",
          "label": "Do you ask for deposits for high-value treatments (over $500)?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "always","label": "Yes, always","score": 5},
            {"value": "sometimes","label": "Sometimes","score": 3},
            {"value": "no","label": "No","score": 0}
          ]
        },
        {
          "id": "cancellation_rebooking_rate_choice",
          "label": "When patients cancel, how often do you fill that slot with another appointment within 1–2 days?",
          "type": "multiple_choice",
          "required": true,
          "options": [
            {"value": "gt_75","label": "Over 75%","score": 5},
            {"value": "50_75","label": "50–75%","score": 3},
            {"value": "lt_50","label": "Under 50%","score": 0}
          ]
